<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bg_select_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<ImageView
    android:layout_width="20dp"
    android:layout_height="10dp"
    android:layout_gravity="right"
    android:layout_marginRight="20dp"
    android:src="@drawable/triangle"/>
    <LinearLayout
        android:id="@+id/ll_bg_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:background="@drawable/bg_select_list">
        <LinearLayout
            android:id="@+id/ll_card"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:src="@drawable/icon_pay_card"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="添加银行卡"
                android:textColor="@color/text_color"
                android:textSize="15dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider"/>
        <LinearLayout
            android:id="@+id/ll_alipay"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:src="@drawable/icon_pay_alipay"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="添加支付宝"
                android:textColor="@color/text_color"
                android:textSize="15dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider"/>
        <LinearLayout
            android:id="@+id/ll_weixin"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:src="@drawable/icon_pay_weixin"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="添加微信"
                android:textColor="@color/text_color"
                android:textSize="15dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>