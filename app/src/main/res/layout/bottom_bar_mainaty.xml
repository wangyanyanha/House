<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="56dp"
    android:layout_alignParentBottom="true"
    android:background="#333333">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="56dp">
    <LinearLayout
        android:id="@+id/ll_bottom_tab_qr_code"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:descendantFocusability="beforeDescendants"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/iv_bottom_tab_qr_code"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/qr_code_white"
            />
        <TextView
            android:id="@+id/tv_bottom_tab_qr_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:text="二维码"/>

        </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bottom_tab_home"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:descendantFocusability="beforeDescendants"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_bottom_tab_home"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/home_orange"
            />
        <TextView
            android:id="@+id/tv_bottom_tab_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="12dp"
            android:text="主页"/>

        </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bottom_tab_mine"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_bottom_tab_mine"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/mine_white"
            />
        <TextView
            android:id="@+id/tv_bottom_tab_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:text="我的"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>